<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <ImageView
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:tint="@color/app_color_par"
                android:src="@drawable/ic_phone" />

        <TextView
                android:id="@+id/txt_device_name"
                style="@style/txt_black_normal_bold"
                android:textColor="@color/app_color_par"
                android:layout_gravity="center_horizontal"
                android:text="dsdsdsddd" />

        <TextView
                android:id="@+id/txt_device_id"
                style="@style/txt_black_normal"
                android:layout_gravity="center_horizontal"
                android:text="dsdsdsddd" />

        <TextView
                android:id="@+id/txt_device_info"
                style="@style/txt_gray_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="start"
                android:layout_marginTop="@dimen/dp50"
                android:layout_marginRight="@dimen/dp5" />

    </LinearLayout>
</layout>